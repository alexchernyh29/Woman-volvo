.promo
    position relative
    width auto
    min-height 100vh
    padding w(15) w(50) w(55) w(25)
    background url('/images/promo-bg.jpg') no-repeat center
    background-size cover
    +below(768px)
        background url('/images/promo-mobile.jpg') no-repeat 0 14%
        background-size cover
        height auto
        padding 0


    &__logo
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        +below(768px)
           padding-left wm(20)
           padding-right wm(20)
           padding-top wm(15)

    &__around
        width w(250)

        img
            width 100%

        +below(768px)
            width wm(130)

    &__volvo
        width w(225)
        
        img
            width 100%

        +below(768px)
            width wm(120)

    &__content 
        margin-left w(15)
        padding-top w(30)
        text-align left
        width w(786)
        +below(768px)
            text-align center
            margin-left wm(0)
            width 100%


    &__chapter
        font-family $ff-volvobroad
        font-weight w(500)
        font-size w(119)
        line-height w(95)
        color #FFFFFF
        +below(768px)
            margin-top wm(15)
            width 100%
            font-size wm(55)
            line-height wm(45)

    &__text
        font-family $ff-volvo
        width w(560)
        padding-top w(20)
        font-size w(30)
        line-height 1.3
        color #FFFFFF
        +below(768px)
            width auto
            padding-left wm(0)
            padding-right wm(0)
            padding-top wm(15)
            font-size wm(26)
            line-height 1.2
            width 100%
            background $c-gradtest
            border w(3) solid $c-white
            border-radius wm(20)

    &__button
       display block
       margin-top w(40)
       border w(4) solid #FFFFFF
       width w(520)
       height w(90)
       border-radius w(15)
       background-color transparent
       +below(768px)
            margin-top wm(20)
            margin-left wm(20)
            margin-right wm(20)
            width wm(280)
            height wm(100)
            border wm(4) solid #FFFFFF
            border-radius wm(15)

    &__button__text
       text-transform uppercase
       font-family $ff-volvo
       font-size w(30)
       text-align center
       color #FFFFFF
       +below(768px)
            font-size wm(25)
            
    &__button:active
        background $c-grey

    &__sharing
        position absolute
        right w(50)
        bottom w(50) 
        +below(768px)
            top wm(250)
            bottom auto
            right wm(5)
